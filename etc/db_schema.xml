<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="codilar_brand" resource="default" engine="innodb" comment="Codilar Brand Vendor information is stored here">
        <column xsi:type="smallint" name="brand_id" unsigned="false" nullable="false" identity="true"
                comment="Brand ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Brand Name"/>
        <column xsi:type="varchar" name="info" nullable="false" length="255" comment="Brand Information"/>
        <column xsi:type="smallint" name="is_active" unsigned="false" nullable="false" identity="false"
                default="1" comment="Is Brand Active"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Modification Time"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="brand_id"/>
        </constraint>
    </table>
</schema>
